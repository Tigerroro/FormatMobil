<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_consultation_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_rounded"
        android:padding="24dp"
        android:elevation="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre de la formation"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#1E3A8A"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/objectifs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objectifs de la formation"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/public_vise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public visé"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/lieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lieu"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/contenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenu"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/cout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coût"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- ✅ AJOUTS -->
        <TextView
            android:id="@+id/dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dates"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/intervenants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intervenants"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />
        <!-- ✅ FIN AJOUTS -->

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="#546E7A"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>

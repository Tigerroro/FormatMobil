<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_consultation_gradient">

    <!-- Liste des formations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFormations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonDeconnexion"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Message si aucune formation -->
    <TextView
        android:id="@+id/textViewAucuneFormation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucune formation disponible"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Bouton de déconnexion -->
    <Button
        android:id="@+id/buttonDeconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Déconnexion"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#D32F2F"
        android:textColor="@android:color/white"
        android:elevation="4dp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:layout_marginBottom="16dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textViewLibelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom de la formation"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E3A8A"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/textViewObjectifs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objectifs de la formation"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Du XX au YY"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textViewSalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salle : Z"
            android:textSize="13sp"
            android:textColor="#555555" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
